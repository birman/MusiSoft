
@{
    ViewBag.Title = "LoginTwoFactorAuthenticator";
}

<h2>Autenticación de doble factor</h2>

@*Codigo QR*@
@*Lectura del token*@


@using (@Html.BeginForm("ValidateTwoFactorAuthenticator", "LoginView"))
{

    <span>Por favor escanea este código en tu Smarthpone meidiante Google Authenticator</span>
    <p></p>

    <img src="@ViewBag.QRCode" alt="" style="height:150px;width:150px" />
    <p></p>

    <div class="form-horizontal">
        <div class="form-group">
            <label>Token</label>
            <div class="col-md-10">
                <input type="text" name="token" id="token" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-02 col-md-10">
            <input type="submit" value="validar" class="btn btn-default" />
        </div>
    </div>

    <span>Digita a continuación el código en tu celular</span>

}
